<h2>Managers for Project <%= link_to @project.title, user_project_path(@user,@project) %></h2>

<table>
	<thead><tr>
		<% if current_user && current_user.is_admin? %>
		<th>Action</th>
		<% end %>
		<th>Manager</th>
	</tr></thead>
	<tbody>
	<% for manager in @managers %>
		<tr>
		<% if current_user && current_user.is_admin? %>
		<td>
    			<%= link_to 'Edit', edit_user_project_manager_path(@user,@project,manager) %>
    			<%= link_to 'Unassign', user_project_manager_path(@user,@project,manager), :method => :delete, :confirm => "Are you sure you want to unassign #{manager.user.full_name} as a manager of \"#{manager.project.title}\"?" %>
		</td>
		<% end %>
		<td>
			<%= link_to manager.user.full_name, user_project_manager_path(@user,@project,manager) %>
		</td>
  </p>
<% end %>
</table>
