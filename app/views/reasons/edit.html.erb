<h1>Editing reason</h1>

<% form_for(@reason) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :stage_reviewer_id %><br />
    <%= f.text_field :stage_reviewer_id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @reason %> |
<%= link_to 'Back', reasons_path %>
