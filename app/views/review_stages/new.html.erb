<h1>New Review Stage</h1>

<% form_for([ current_user, @project, @review_stage ]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project_id %><br />
    <%= f.hidden_field :project_id %>
    <%=h @project.title %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :gate_function %><br />
    <%= f.text_field :gate_function %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', user_project_review_stages_path(current_user,@project) %>
