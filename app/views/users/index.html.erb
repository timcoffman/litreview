<h1>Listing users</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>Nickname</th>
    <th>Identity url</th>
    <th>Email</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.full_name %></td>
    <td><%=h user.nickname %></td>
    <td><%=h user.identity_url %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

