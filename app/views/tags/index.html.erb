<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Full name</th>
    <th>Nickname</th>
    <th>Identity url</th>
    <th>Email</th>
  </tr>

<% for tag in @tags %>
  <tr>
    <td><%=h tag.words %></td>
    <td><%=h tag.user.full_name if tag.user %></td>
    <td><%=h tag.project.title if tag.project %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

